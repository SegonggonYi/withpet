<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="communityns">

	<!-- 글작성 -->
	<insert id="insertBoard" parameterType="community">
		insert into community
		values(community_seq.nextval,#{com_title},#{com_writer},
		0,sysdate,#{com_content},#{com_file},0)
	</insert>
	<!-- 글갯수 -->
	<select id="count" resultType="int">
		select count(*) from community
	</select>
	<!-- 글목록 -->  
	<!-- 방법1 : <![CDATA[        ]]>    -->
	<!-- 방법2 :  > : &gt;  ,  < : &lt;  -->	  
	<select id="List" parameterType="int" resultType="community">
		<!-- <![CDATA[ -->
		select * from ( select rownum rcom_no, community.* from (
		select * from community order by com_no desc) community )
		where rcom_no &gt;= ((#{page}-1) * 10+1)  and  
		      rcom_no &lt;= (#{page}*10)
		<!-- ]]> -->
	</select>
	
	<!-- 상세정보 구하기 
	<select id="content" parameterType="int" resultType="community">
	   select * from community where com_no = #{com_no}
	</select>-->

	<!-- 조회수 증가 <update id="hit" parameterType="int"> update community set readcnt=readcnt+1 
		where no=#{no} </update> -->

</mapper>