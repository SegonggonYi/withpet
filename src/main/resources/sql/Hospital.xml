	<!-- 병원 게시판 글 작성 -->
	<insert id="insert" parameterType="hospital">
		insert into hospital values (hospital_seq.nextval,#{hos_name},#{hos_writer},#{hos_addr},
			#{hos_tel},#{hos_file,jdbcType=VARCHAR},#{hos_lat},#{hos_long},
			#{hos_time},#{hos_24},#{hos_holiday},#{hos_parking},#{hos_content},
			#{hos_link},0,0,sysdate)
	</insert>
	
	<!-- 총 데이터 개수 구하기 -->
	<select id="getTotal" parameterType="hospital" resultType="int">
		select count(*) from hospital
		<!-- <where>
			<if test="keyword != null and search !='subcon'">
