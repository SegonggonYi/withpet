<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="product">


    <!-- 01. 상품 전체 리스트 -->
    <select id="productList" parameterType="int" resultType="com.project.withpet.model.Product">
        select * from (select rownum rnum, product.* from (
        select * from product order by pro_no desc)product)
        where rnum &gt;= ((#{page}-1) * 10+1)  and
            rnum &lt;= (#{page}*10)
    </select>

    <!-- 01-1 글 갯수 -->
    <select id="countProduct" resultType="int">
        select count(*) from product
    </select>

